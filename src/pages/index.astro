---
import Layout from '../layouts/Layout.astro';
import { BannerCarousel } from '@/components/pages/home/BannerCarousel';
import { client } from '../lib/sanity';
import { HOMEPAGE_QUERY } from '../lib/sanity.queries';
import type { BannerPopulated, NoticiaListItem } from '../types/sanity.types';
import { urlFor } from '../utils/sanity.utils';

// Renderizado estático en build time
export const prerender = true;

interface HomepageData {
  banners: BannerPopulated[];
  noticias: NoticiaListItem[];
}

// Fetch de datos en tiempo de compilación
const data = await client.fetch<HomepageData>(HOMEPAGE_QUERY);
const { banners, noticias } = data;
---

<Layout title="Inicio - Institución Educativa">
  <main class="min-h-screen">
    
    <!-- Carousel de Banners -->
    {banners.length > 0 && (
      <section class="mb-16">
        <BannerCarousel banners={banners} client:load />
      </section>
    )}

    <!-- Sección de Últimas Noticias -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-8 md:mb-12 text-gray-900"> Últimas Noticias </h2>
        
        {noticias.length === 0 ? (
          <p class="text-center text-gray-600 text-lg py-12">
            No hay noticias publicadas aún.
          </p>
        ) : (
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-12">
            {noticias.map((noticia) => (
              <article class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300 group">
                <a href={`/noticias/${noticia.slug.current}`} class="block">
                  {noticia.portada && (
                    <div class="aspect-[3/2] overflow-hidden bg-gray-100">
                      <img
                        src={urlFor(noticia.portada).width(600).height(400).url()}
                        srcset={`
                          ${urlFor(noticia.portada).width(300).height(200).url()} 300w,
                          ${urlFor(noticia.portada).width(600).height(400).url()} 600w
                        `}
                        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                        alt={noticia.portada.alt || noticia.titulo}
                        loading="lazy"
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  )}
                  
                  <div class="p-6">
                    <time 
                      datetime={noticia.fechaPublicacion} 
                      class="block text-sm text-gray-500 mb-3"
                    >
                      {new Date(noticia.fechaPublicacion).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    
                    <h3 class="text-xl font-semibold mb-3 text-gray-900 line-clamp-2 leading-tight">
                      {noticia.titulo}
                    </h3>
                    
                    <span class="inline-block text-blue-600 font-medium text-[15px] group-hover:underline">
                      Leer más →
                    </span>
                  </div>
                </a>
              </article>
            ))}
          </div>
        )}

        {noticias.length > 0 && (
          <div class="text-center mt-8">
            <a 
              href="/noticias" 
              class="inline-block px-8 py-3.5 bg-blue-600 text-white rounded-lg font-semibold 
                     hover:bg-blue-700 transition-colors duration-200
                     focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
              Ver Todas las Noticias
            </a>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>