---
import Layout from '../layouts/Layout.astro';
import BannerCarousel from '../components/BannerCarousel.astro';
import { client } from '../lib/sanity';
import { HOMEPAGE_QUERY } from '../lib/sanity.queries';
import type { BannerPopulated, NoticiaListItem } from '../types/sanity.types';
import { urlFor } from '../utils/sanity.utils';

// Renderizado estático en build time
export const prerender = true;

interface HomepageData {
  banners: BannerPopulated[];
  noticias: NoticiaListItem[];
}

// Fetch de datos en tiempo de compilación
const data = await client.fetch<HomepageData>(HOMEPAGE_QUERY);
const { banners, noticias } = data;
---

<Layout title="Inicio - Institución Educativa">
  <main class="homepage">

    <div>
   
    </div>


    <!-- Carousel de Banners -->
    <!--{banners.length > 0 && (
      <section class="banner-section">
        <BannerCarousel banners={banners} />
      </section>
    )}-->

    <!-- Sección de Últimas Noticias -->
    <section class="noticias-section">
      <div class="container">
        <h2 class="section-title">Últimas Noticias</h2>
        
        {noticias.length === 0 ? (
          <p class="no-content">No hay noticias publicadas aún.</p>
        ) : (
          <div class="noticias-grid">
            {noticias.map((noticia) => (
              <article class="noticia-card">
                <a href={`/noticias/${noticia.slug.current}`}>
                  {noticia.portada && (
                    <div class="noticia-image">
                      <img
                        src={urlFor(noticia.portada).width(600).height(400).url()}
                        srcset={`
                          ${urlFor(noticia.portada).width(300).height(200).url()} 300w,
                          ${urlFor(noticia.portada).width(600).height(400).url()} 600w
                        `}
                        sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"
                        alt={noticia.portada.alt || noticia.titulo}
                        loading="lazy"
                      />
                    </div>
                  )}
                  
                  <div class="noticia-content">
                    <time datetime={noticia.fechaPublicacion} class="noticia-date">
                      {new Date(noticia.fechaPublicacion).toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    
                    <h3 class="noticia-title">{noticia.titulo}</h3>
                    
                    <span class="read-more">Leer más →</span>
                  </div>
                </a>
              </article>
            ))}
          </div>
        )}

        {noticias.length > 0 && (
          <div class="view-all">
            <a href="/noticias" class="btn-primary">
              Ver Todas las Noticias
            </a>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .homepage {
    min-height: 100vh;
  }

  .banner-section {
    margin-bottom: 4rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: #1f2937;
  }

  .no-content {
    text-align: center;
    color: #6b7280;
    font-size: 1.125rem;
    padding: 3rem 0;
  }

  /* Grid de Noticias */
  .noticias-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .noticia-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .noticia-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
  }

  .noticia-card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .noticia-image {
    width: 100%;
    aspect-ratio: 3 / 2;
    overflow: hidden;
    background: #f3f4f6;
  }

  .noticia-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .noticia-card:hover .noticia-image img {
    transform: scale(1.05);
  }

  .noticia-content {
    padding: 1.5rem;
  }

  .noticia-date {
    display: block;
    font-size: 0.875rem;
    color: #6b7280;
    margin-bottom: 0.75rem;
  }

  .noticia-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    color: #1f2937;
    line-height: 1.4;
  }

  .read-more {
    display: inline-block;
    color: #2563eb;
    font-weight: 500;
    font-size: 0.9375rem;
  }

  .noticia-card:hover .read-more {
    text-decoration: underline;
  }

  /* Botón Ver Todas */
  .view-all {
    text-align: center;
    margin-top: 2rem;
  }

  .btn-primary {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: #2563eb;
    color: white;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.3s;
  }

  .btn-primary:hover {
    background: #1d4ed8;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .noticias-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .banner-section {
      margin-bottom: 2rem;
    }
  }
</style>